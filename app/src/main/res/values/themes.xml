<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MedxInfoICE" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#BB0044</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#1E3E72</item>
        <!-- Secondary brand color. -->
        <item name="colorAccent">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimarySurface</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor" tools:targetApi="l">@color/black</item>
    </style>

    <!-- Screens background color-->

    <color name="bg_screen1">#ea0055</color>
    <color name="bg_screen2">#f6bc5b</color>
    <color name="bg_screen3">#3ab4e7</color>
    <color name="bg_screen4">#ad87c0</color>


    <!-- dots inactive colors -->
    <color name="dot_dark_screen1">#BB0044</color>
    <color name="dot_dark_screen2">#C49748</color>
    <color name="dot_dark_screen3">#2E8FB8</color>
    <color name="dot_dark_screen4">#8A6C99</color>

    <!-- dots active colors -->
    <color name="dot_light_screen1">#EE3377</color>
    <color name="dot_light_screen2">#F7CA7B</color>
    <color name="dot_light_screen3">#61C2EB</color>
    <color name="dot_light_screen4">#BD9FCC</color>

    <array name="array_dot_active">
        <item>@color/dot_light_screen1</item>
        <item>@color/dot_light_screen2</item>
        <item>@color/dot_light_screen3</item>
        <item>@color/dot_light_screen4</item>
    </array>

    <array name="array_dot_inactive">
        <item>@color/dot_dark_screen1</item>
        <item>@color/dot_dark_screen2</item>
        <item>@color/dot_dark_screen3</item>
        <item>@color/dot_dark_screen4</item>
    </array>

    <style name="topAppBar">
        <item name="android:background">?attr/colorPrimarySurface</item>
    </style>

    <style name="personalInformation">
        <item name="android:backgroundTint">?attr/colorPrimarySurface</item>
    </style>

    <style name="MaterialCard">
        <item name="android:backgroundTint">?attr/colorPrimary</item>
    </style>

    <style name="TextInputLayout">
        <item name="android:backgroundTint">?attr/colorPrimarySurface</item>
    </style>

    <style name="TextInputLayoutText" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">

    </style>

    <style name="BottomNavigation">
        <item name="android:background">@color/colorPrimary</item>
        <item name="itemBackground">@color/colorPrimary</item>
        <item name="itemIconTint">@drawable/bottom_nav_selector_light</item>
        <item name="itemTextColor">@drawable/bottom_nav_selector_light</item>
    </style>

    <style name="textColorTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/black</item>
        <item name="drawableTint">@color/colorSecondary</item>

    </style>

    <style name="textColorTitle2" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="cardViewTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="cardViewSubTitle" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textColorBody">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="imageColor">
        <item name="tint">?attr/colorControlNormal</item>
    </style>

    <style name="button">
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="floatingActionButton">
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:layout_margin">16dp</item>
        <item name="fabSize">normal</item>
        <item name="android:src">@drawable/ic_add</item>
        <item name="tint">@color/design_default_color_background</item>
    </style>

</resources>